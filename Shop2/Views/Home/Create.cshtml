@model Shop2.Models.Product
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/stile-create.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">

    <title>Document</title>
</head>

<body>
    <div class="container-fluid bg-info">
        <h1 class="text-center">Добавление товара</h1>
        <form asp-action="Create" asp-controller="home" method="post" enctype="multipart/form-data">
            <div class="indent-left">
                <label asp-for="ProductName">Название Товара/Продукта</label>
                <input type="text" asp-for="ProductName">

                <label asp-for="Descriptons">Описание товара</label>
                <input type="text" asp-for="Descriptons">

                <label asp-for="Quantitys">Колличество товара</label>
                <input type="number" asp-for="Quantitys">

                <label asp-for="Price">Цена за 1 шт.</label>
                <input type="text" asp-for="Price">

                <label asp-for="ImageProduct">Загрузить фотографию товара</label>
                <input name="ImageProduct" type="file">

                <input type="submit" value="Добавить" class="btn" />
            </div>
        </form>
    </div>
</body>
</html>